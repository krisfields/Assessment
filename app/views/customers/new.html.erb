<% provide(:title, 'New Customer') %>
<h1>New Customer</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@customer) do |f| %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      <%= f.submit "Create New Customer", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
